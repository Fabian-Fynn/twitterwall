{
  "name": "twitterwall",
  "version": "1.0.0",
  "description": ".concat() twitterwall",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-js": "browserify app/index.js > build/bundle.js",
    "build-css": "lessc app/index.less > build/bundle.css",
    "build-html": "cp app/*.html build/",
    "copy": "cp node_modules/emoji/lib/emoji.png build/",
    "build": "npm run clean && npm run copy && npm run build-js && npm run build-css && npm run build-html",
    "watch": "watchify app/index.js -o build/bundle.js -dv",
    "start": "npm run build && nf start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/conc-at/twitterwall.git"
  },
  "keywords": [
    "twitter",
    "tweet",
    "twitterwall"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/conc-at/twitterwall/issues"
  },
  "homepage": "https://github.com/conc-at/twitterwall",
  "dependencies": {
    "angular": "^1.3.0",
    "angular-sanitize": "^1.3.0",
    "browserify": "^6.2.0",
    "browserify-shim": "^3.8.0",
    "debug": "^2.1.0",
    "emoji": "^0.3.2",
    "express": "^4.10.0",
    "less": "^1.7.5",
    "node-tweet-stream": "^1.6.0",
    "parallizer": "^1.0.4",
    "socket.io": "^1.2.0",
    "twit": "^1.1.18",
    "twitter-text": "^1.9.4",
    "watchify": "^2.1.0"
  },
  "devDependencies": {
    "foreman": "^1.0.0"
  },
  "browser": {
    "angular": "./node_modules/angular/angular.js",
    "angular-sanitize": "./node_modules/angular-sanitize/angular-sanitize.js"
  },
  "browserify-shim": {
    "angular": "angular",
    "angular-sanitize": {
      "depends": [
        "angular"
      ]
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
}
